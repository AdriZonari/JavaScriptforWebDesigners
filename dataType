/* ATTENTION to data type!*/

let itemBball = parseInt(document.getElementById('txt-q-bball').value, 10),       /* use "parseInt" to force numbers
    itemJersey = parseInt(document.getElementById('txt-q-jersey').value, 10),
    itemPower = parseInt(document.getElementById('txt-q-power').value, 10),

let totalQty = itemBball + itemJersey + itemPower;                                /* if item"" = 2, than totalQty = 6 */

